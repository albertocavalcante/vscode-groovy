{
  "name": "vscode-groovy",
  "displayName": "Groovy Language Support",
  "description": "Language support for Apache Groovy, Gradle, and Jenkins Pipeline",
  "version": "0.1.0",
  "publisher": "albertocavalcante",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "groovy",
    "gradle",
    "jenkinsfile",
    "jenkins",
    "pipeline"
  ],
  "activationEvents": [
    "onLanguage:groovy",
    "onLanguage:jenkinsfile",
    "workspaceContains:**/Jenkinsfile",
    "workspaceContains:**/Jenkinsfile.*",
    "workspaceContains:**/Jenkins*",
    "workspaceContains:**/*.jenkins",
    "workspaceContains:**/*.groovy",
    "workspaceContains:**/*.gradle",
    "workspaceContains:**/*.gradle.kts"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "groovy.restartServer",
        "title": "Groovy: Restart Language Server"
      },
      {
        "command": "groovy.organizeImports",
        "title": "Groovy: Organize Imports"
      },
      {
        "command": "groovy.generateAccessors",
        "title": "Groovy: Generate Getter and Setter"
      },
      {
        "command": "groovy.convertStringType",
        "title": "Groovy: Convert String Type"
      },
      {
        "command": "groovy.addCompileStatic",
        "title": "Groovy: Add @CompileStatic"
      },
      {
        "command": "groovy.gradle.build",
        "title": "Gradle: Build"
      },
      {
        "command": "groovy.gradle.test",
        "title": "Gradle: Test"
      },
      {
        "command": "groovy.gradle.clean",
        "title": "Gradle: Clean"
      },
      {
        "command": "groovy.gradle.selectTask",
        "title": "Gradle: Select and Run Task"
      },
      {
        "command": "groovy.gradle.dependencies",
        "title": "Gradle: Show Dependencies"
      },
      {
        "command": "groovy.gradle.refresh",
        "title": "Gradle: Refresh Project"
      },
      {
        "command": "groovy.gradle.projectInfo",
        "title": "Gradle: Show Project Info"
      },
      {
        "command": "groovy.test.runInFile",
        "title": "Groovy: Run Tests in File"
      },
      {
        "command": "groovy.test.runAll",
        "title": "Groovy: Run All Tests"
      },
      {
        "command": "groovy.test.runAtCursor",
        "title": "Groovy: Run Test at Cursor"
      },
      {
        "command": "groovy.test.discover",
        "title": "Groovy: Discover Tests"
      },
      {
        "command": "groovy.test.createSpock",
        "title": "Groovy: Create Spock Test"
      }
    ],
    "languages": [
      {
        "id": "groovy",
        "aliases": [
          "Groovy",
          "groovy"
        ],
        "extensions": [
          ".groovy",
          ".gvy",
          ".gy",
          ".gsh",
          ".gradle"
        ],
        "firstLine": "^#!.*\\b(groovy|gradle)\\b",
        "configuration": "./language-configuration.json"
      },
      {
        "id": "jenkinsfile",
        "aliases": [
          "Jenkinsfile",
          "Jenkins Pipeline"
        ],
        "filenames": [
          "Jenkinsfile",
          "Jenkins"
        ],
        "filenamePatterns": [
          "Jenkinsfile*",
          "Jenkins*",
          "*.jenkins",
          "*.jenkinsfile",
          "*.Jenkinsfile"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "groovy",
        "scopeName": "source.groovy",
        "path": "./syntaxes/groovy.tmLanguage.json"
      },
      {
        "language": "jenkinsfile",
        "scopeName": "source.groovy",
        "path": "./syntaxes/groovy.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "groovy",
        "path": "./snippets/groovy.json"
      },
      {
        "language": "jenkinsfile",
        "path": "./snippets/jenkinsfile.json"
      },
      {
        "language": "groovy",
        "path": "./snippets/gradle.json"
      }
    ],
    "configuration": {
      "title": "Groovy Language Server",
      "properties": {
        "groovy.java.home": {
          "type": "string",
          "description": "Path to Java home (requires Java 17+)"
        },
        "groovy.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication with Groovy Language Server"
        },
        "groovy.server.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "groovy.compilation.mode": {
          "type": "string",
          "enum": [
            "workspace",
            "single-file"
          ],
          "default": "workspace",
          "description": "Compilation mode: 'workspace' compiles all files together for cross-file resolution, 'single-file' compiles each file in isolation (faster but no cross-file resolution)."
        },
        "groovy.compilation.incrementalThreshold": {
          "type": "number",
          "default": 50,
          "minimum": 1,
          "description": "Number of files above which incremental compilation is used. Below this, full recompilation is performed for simplicity and correctness."
        },
        "groovy.compilation.maxWorkspaceFiles": {
          "type": "number",
          "default": 500,
          "minimum": 1,
          "description": "Maximum number of Groovy files to compile together in workspace mode. Above this limit, falls back to single-file mode for performance."
        },
        "groovy.server.downloadUrl": {
          "type": "string",
          "description": "Custom URL to download Groovy Language Server JAR (for air-gapped environments). If not set, downloads from GitHub releases."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run prepare-server && npm run package-build",
    "prepare-server": "node scripts/prepare-server.js",
    "prepare-server:local": "PREFER_LOCAL=true node scripts/prepare-server.js",
    "prepare-server:download": "FORCE_DOWNLOAD=true node scripts/prepare-server.js",
    "prepare-server:custom": "node scripts/prepare-server.js",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "package-build": "npm run check-types && npm run lint && node esbuild.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project client/tsconfig.json",
    "check-types": "tsc --noEmit --project client/tsconfig.json",
    "lint": "eslint client/src/**/*.ts",
    "package": "npm run prepare-server && vsce package",
    "clean": "rm -rf client/out/ server/*.jar",
    "test": "npm run test:unit",
    "test:unit": "npm run compile:tests && mocha client/out/test/unit/**/*.test.js",
    "compile:tests": "tsc --project client/tsconfig.json",
    "test:integration": "npm run compile:tests && vscode-test",
    "test:watch": "npm run compile && mocha client/out/test/unit/**/*.test.js --watch",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "npm run compile:tests && c8 mocha client/out/test/unit/**/*.test.js",
    "postinstall": "cd client && npm install && cd .. && npm run prepare-server"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22",
    "@types/sinon": "^17.0.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.13.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/albertocavalcante/vscode-groovy.git"
  },
  "bugs": {
    "url": "https://github.com/albertocavalcante/vscode-groovy/issues"
  },
  "homepage": "https://github.com/albertocavalcante/vscode-groovy#readme"
}
